@{
    ViewData["Title"] = "Landing Page";
}

<style>
    body {
        font-family: 'Arial', sans-serif;
        background: linear-gradient(to right, #ff7e5f, #feb47b);
        color: #fff;
        text-align: center;
        padding: 50px;
    }

    h1 {
        font-size: 3em;
        font-weight: bold;
        color: #fff;
        margin-bottom: 20px;
        text-shadow: 3px 3px 5px rgba(0, 0, 0, 0.4);
    }

    p {
        font-size: 1.5em;
        color: #fff;
        margin-top: 10px;
        line-height: 1.6;
    }

    .landing-container {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 40px;
        border-radius: 10px;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
        display: inline-block;
        margin-top: 50px;
    }

    .button {
        padding: 12px 30px;
        font-size: 1.2em;
        background-color: #ff7e5f;
        border: none;
        color: white;
        border-radius: 30px;
        cursor: pointer;
        margin-top: 30px;
        transition: all 0.3s ease;
    }

        .button:hover {
            background-color: #feb47b;
            transform: translateY(-3px);
        }
</style>

<div class="landing-container">
    <h1>Welcome to the Landing Page!</h1>
    <p>This is a public page accessible without login.</p>
    <a href="/home" class="button">Go to Home</a>
</div>
